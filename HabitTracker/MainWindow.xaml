<Window x:Class="HabitTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitTracker"
        mc:Ignorable="d"
        Title="Login/Registration" Height="350" Width="400"
        Background="White" FontFamily="Segoe UI" FontSize="14">
    <Grid>
        <TabControl Background="#faedcd" BorderBrush="#FFCCCCCC">
            <!-- Вкладка "Login" -->
            <TabItem Header="Login" Background="#FF4CAF50" Foreground="White">
                <StackPanel Margin="20" Background="#faedcd">
                    <TextBlock Text="Username:" Foreground="#FF333333" />
                    <TextBox x:Name="LoginUsername" Margin="0,5,0,10" Background="White" BorderBrush="#FFCCCCCC" />
                    <TextBlock Text="Password:" Foreground="#FF333333" />
                    <PasswordBox x:Name="LoginPassword" Margin="0,5,0,10" Background="White" BorderBrush="#FFCCCCCC" />
                    <Button Content="Login" Click="LoginButton_Click" Background="#FF4CAF50" Foreground="White" BorderBrush="#FF4CAF50" Padding="10,5" />
                    <TextBlock x:Name="LoginMessage" Foreground="Red" Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>

            <!-- Вкладка "Register" -->
            <TabItem Header="Register" Background="#FF2196F3" Foreground="White">
                <StackPanel Margin="20" Background="#faedcd">
                    <TextBlock Text="Username:" Foreground="#FF333333" />
                    <TextBox x:Name="RegisterUsername" Margin="0,5,0,10" Background="White" BorderBrush="#FFCCCCCC" />
                    <TextBlock Text="Password:" Foreground="#FF333333" />
                    <PasswordBox x:Name="RegisterPassword" Margin="0,5,0,10" Background="White" BorderBrush="#FFCCCCCC" />
                    <TextBlock Text="Confirm Password:" Foreground="#FF333333" />
                    <PasswordBox x:Name="RegisterConfirmPassword" Margin="0,5,0,10" Background="White" BorderBrush="#FFCCCCCC" />
                    <Button Content="Register" Click="RegisterButton_Click" Background="#FF2196F3" Foreground="White" BorderBrush="#FF2196F3" Padding="10,5" />
                    <TextBlock x:Name="RegisterMessage" Foreground="Red" Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
